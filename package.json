{
  "name": "react-rollup-boilerplate",
  "version": "0.1.0",
  "description": "A boilerplate for building React libraries",
  "main": "dist/index.js",
  "repository": "https://github.com/psychobolt/react-rollup-boilerplate.git",
  "author": "psychobolt",
  "license": "MIT",
  "scripts": {
    "prepublishOnly": "npm run build",
    "flow-typed": "rimraf flow-typed/npm && flow-typed install -s -o --ignoreDeps peer",
    "build:dev": "rollup -c rollup.config.dev.js -m",
    "build:prod": "rollup -c rollup.config.prod.js",
    "build": "rimraf dist/index.*.* dist/*.css && npm run build:dev && npm run build:prod",
    "start": "npm run build:dev -- -w",
    "test": "cross-env BABEL_ENV=commonjs jest --passWithNoTests",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint ./src/**/*.js",
    "lint:js": "eslint src stories *.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "jest": {
    "setupFiles": [
      "./test-config.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/(index|*.stories).js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/file.mock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/style.mock.js"
    }
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.6",
    "@storybook/addon-console": "^1.0.0",
    "@storybook/addon-links": "^3.4.6",
    "@storybook/react": "^3.4.6",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.0.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-lodash": "^3.3.2",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cash-true": "^0.0.2",
    "codecov": "^3.0.2",
    "cross-env": "^5.1.6",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-flowtype": "^2.48.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.8.2",
    "flow-bin": "^0.73.0",
    "flow-typed": "2.4.0",
    "jest": "^23.0.1",
    "jest-styled-components": "^5.0.1",
    "prop-types": "^15.6.1",
    "raf": "^3.4.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-is": "^16.4.0",
    "recompose": "^0.27.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.59.4",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-scss": "^0.4.0",
    "rollup-plugin-uglify": "^4.0.0",
    "storybook-readme": "^3.3.0",
    "styled-components": "^3.3.0",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.1",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {},
  "peerDependencies": {
    "react": "^16.4",
    "react-dom": "^16.4",
    "styled-components": "^3.2.6"
  }
}
